@page
@model EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Service.Id" />
            <div class="form-group form-floating mb-3">
                <select asp-for="Service.DepartmentId" class="form-control form-select" asp-items="ViewBag.DepartmentId"></select>
                <label asp-for="Service.DepartmentId" class="control-label">Department</label>
                <span asp-validation-for="Service.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group form-floating mb-3">
                <input asp-for="Service.Name" class="form-control" />
                <label asp-for="Service.Name" class="control-label"></label>
                <span asp-validation-for="Service.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-floating mb-3">
                <input asp-for="Service.Description" class="form-control" />
                <label asp-for="Service.Description" class="control-label"></label>
                <span asp-validation-for="Service.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Service.Status" /> @Html.DisplayNameFor(model => model.Service.Status)
                </label>
            </div>
            <div class="form-group form-floating mb-3">
                <input asp-for="Service.Price" class="form-control" />
                <label asp-for="Service.Price" class="control-label"></label>
                <span asp-validation-for="Service.Price" class="text-danger"></span>
            </div>
            <div class="form-group form-floating mb-3">
                <input asp-for="Service.Duration" class="form-control" />
                <label asp-for="Service.Duration" class="control-label"></label>
                <span asp-validation-for="Service.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
