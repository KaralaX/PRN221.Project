@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Services</h1>

<div>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</div>
<table class="table table-borderless table-striped table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Service[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Service[0].Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Service[0].Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Service[0].Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Service[0].Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Service[0].Department)
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Service)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @{ var status = item.Status ? "Active" : "Inactive"; }
                @status
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @item.Duration minutes
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Description)
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">
                    @{ var action = item.Status ? "Deactivate" : "Activate"; }
                    @action
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>