@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@{
    var action = @Model.Service.Status ? "Deactivate" : "Activate";
}
<h1>@action</h1>


<h3>Are you sure you want to @action this?</h3>
<div>
    <h4>Service</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Status)
        </dt>
        <dd class="col-sm-10">
            @{ var status = Model.Service.Status ? "Active" : "Inactive"; }
            @status
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Department.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Service.Id"/>
        <input type="submit" value="Confirm" class="btn btn-danger"/> 
        <a class="btn btn-primary" asp-page="./Index">Back to List</a>
    </form>
</div>