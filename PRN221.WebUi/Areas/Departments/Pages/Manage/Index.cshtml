@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Manage Departments</h1>

<div>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</div>
<table class="table table-striped table-hover table-borderless">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Department[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department[0].Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department[0].Status)
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Department)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @{ var status = item.Status ? "Active" : "Inactive"; }
                @status
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">
                    @{ var action = item.Status ? "Deactivate" : "Activate"; }
                    @action
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
<script src="~/js/site2.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>