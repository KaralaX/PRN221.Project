@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@{ var action = Model.Department.Status ? "Deactivate" : "Activate"; }
<h1>@action</h1>

<h3>Are you sure you want to @action department?</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Status)
        </dt>
        <dd class="col-sm-10">
            @{ var status = Model.Department.Status ? "Active" : "Inactive"; }
            @status
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Department.Id"/>
        <input type="submit" value="Confirm" class="btn btn-danger"/>
        <a class="btn btn-primary" asp-page="./Index">Back to List</a>
    </form>
</div>