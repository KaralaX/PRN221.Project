@page
@model PRN221.WebUi.Areas.Staffs.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Manage Staffs</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].Dob)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Staff)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>