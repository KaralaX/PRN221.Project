@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Manage Doctors</h1>

<div>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</div>
<table class="table table-borderless table-hover table-striped">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Doctor[0].Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doctor[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doctor[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doctor[0].Dob)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doctor[0].Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doctor[0].Address)
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Doctor)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>