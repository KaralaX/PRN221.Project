@page
@model EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-center mt-3">

    <div class="col-md-8">
        <h2>Create Doctor</h2>
        <hr/>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-floating mb-3">
                <input asp-for="Doctor.Id" type="hidden" class="form-control"/>
                <label asp-for="Doctor.Id" hidden class="control-label"></label>
                <span asp-validation-for="Doctor.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group form-floating mb-3">
                <input asp-for="Doctor.FirstName" class="form-control"/>
                <label asp-for="Doctor.FirstName" class="control-label"></label>
                <span asp-validation-for="Doctor.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group form-floating mb-3">
                <input asp-for="Doctor.LastName" class="form-control"/>
                <label asp-for="Doctor.LastName" class="control-label"></label>
                <span asp-validation-for="Doctor.LastName" class="text-danger"></span>
            </div>
            <div class="form-group form-floating mb-3">
                <select asp-for="Doctor.Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <label asp-for="Doctor.Gender" class="control-label"></label>
                <span asp-validation-for="Doctor.Gender" class="text-danger"></span>
            </div>
            <div class="form-group form-floating mb-3">
                <input asp-for="Doctor.Address" class="form-control"/>
                <label asp-for="Doctor.Address" class="control-label"></label>
                <span asp-validation-for="Doctor.Address" class="text-danger"></span>
            </div>
            <div class="form-group form-floating mb-3">
                <input asp-for="Doctor.Dob" class="form-control" type="date"/>
                <label asp-for="Doctor.Dob" class="control-label"></label>
                <span asp-validation-for="Doctor.Dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Services" class="control-label"></label>
                <div class="mt-3">
                    @foreach (var service in ViewBag.Services as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>())
                    {
                        var isCheck = Model.Doctor.Services.Contains(Guid.Parse(service.Value)) ? "checked":"";
                        
                        <div class="form-check form-check-inline" style="width: 260px">
                            <div>
                                <input type="checkbox" name="Doctor.Services" id="@service.Value" value="@service.Value" class="form-check-input" @isCheck/>
                            </div>
                            <label class="form-check-label" for="@service.Value">@service.Text</label>
                        </div>
                    }
                </div>
                <span asp-validation-for="Doctor.Services" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary"/>
                <a class="btn btn-primary" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
