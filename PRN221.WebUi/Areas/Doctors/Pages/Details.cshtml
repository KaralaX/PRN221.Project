@page
@model PRN221.WebUi.Areas.Doctors.Pages.DetailsModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Doctor Details</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Doctor</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 col-md-2">
                    @Html.DisplayNameFor(model => model.Doctor.Address)
                </dt>
                <dd class="col-sm-9 col-md-10 mb-3">
                    @Html.DisplayFor(model => model.Doctor.Address)
                </dd>

                <dt class="col-sm-3 col-md-2">
                    @Html.DisplayNameFor(model => model.Doctor.FirstName)
                </dt>
                <dd class="col-sm-9 col-md-10 mb-3">
                    @Html.DisplayFor(model => model.Doctor.FirstName)
                </dd>

                <dt class="col-sm-3 col-md-2">
                    @Html.DisplayNameFor(model => model.Doctor.LastName)
                </dt>
                <dd class="col-sm-9 col-md-10 mb-3">
                    @Html.DisplayFor(model => model.Doctor.LastName)
                </dd>

                <dt class="col-sm-3 col-md-2">
                    @Html.DisplayNameFor(model => model.Doctor.Dob)
                </dt>
                <dd class="col-sm-9 col-md-10 mb-3">
                    @Html.DisplayFor(model => model.Doctor.Dob)
                </dd>

                <dt class="col-sm-3 col-md-2">
                    @Html.DisplayNameFor(model => model.Doctor.Gender)
                </dt>
                <dd class="col-sm-9 col-md-10 mb-3">
                    @Html.DisplayFor(model => model.Doctor.Gender)
                </dd>
                <dt class="col-sm-3 col-md-2">
                    Rating
                </dt>
                <dd class="col-sm-9 col-md-10 mb-3">
                    <i class="far fa-star mx-2 fa-xs text-yellow" style="margin-top: -0.16rem;">@Model.Rating</i>
                </dd>
                <dt class="col-sm-3 col-md-2">
                    Detailed Reviews
                </dt>
                <dd class="col-sm-9 col-md-10 mb-3">
                        <div class="col-md-8 col-lg-6">
                            <div class="card shadow-0 border" style="background-color: white">
                                <div class="card-body p-4">
                                    @foreach (var item in Model.Appointments)
                                    {
                                        <div class="card mb-4">
                                            <div class="card-body" style="background-color: white">
                                                <p style="color:blue;">@item.ServiceReview?.Comment</p>

                                                <div class="d-flex justify-content-between">
                                                    <div class="d-flex flex-row align-items-center">
                                                        <p class="small mb-0 ms-2" style="color:black;">@item.Patient.FirstName @item.Patient.LastName</p>
                                                    </div>
                                                    <div class="d-flex flex-row align-items-center">
                                                        <p class="small text-muted mb-0">About Dr. @item.Doctor.FirstName @item.Doctor.LastName</p>
                                                        <i class="far fa-star mx-2 fa-xs text-yellow" style="margin-top: -0.16rem;"></i>
                                                        <p class="small mb-0" style="color:blue;">@item.ServiceReview?.Rating</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                    </div>
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-page="./Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>
<div class="container-fluid bg-dark text-light footer mt-5 pt-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="container-fluid bg-dark text-light footer mt-5 pt-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="container py-5">
                    <div class="row g-5">
                        <div class="col-lg-3 col-md-6">
                            <h5 class="text-light mb-4">Address</h5>
                            <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>FPT University - Hoa Lac</p>
                            <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+09 444 44446</p>
                            <p class="mb-2"><i class="fa fa-envelope me-3"></i>clinik@gmail.com</p>
                            <div class="d-flex pt-2">
                                <a class="btn btn-outline-light btn-social rounded-circle" href=""><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-outline-light btn-social rounded-circle" href=""><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-outline-light btn-social rounded-circle" href=""><i class="fab fa-youtube"></i></a>
                                <a class="btn btn-outline-light btn-social rounded-circle" href=""><i class="fab fa-linkedin-in"></i></a>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <h5 class="text-light mb-4">Services</h5>
                            <a class="btn btn-link" href="">Cardiology</a>
                            <a class="btn btn-link" href="">Pulmonary</a>
                            <a class="btn btn-link" href="">Neurology</a>
                            <a class="btn btn-link" href="">Orthopedics</a>
                            <a class="btn btn-link" href="">Laboratory</a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <h5 class="text-light mb-4">Quick Links</h5>
                            <a class="btn btn-link" href="">About Us</a>
                            <a class="btn btn-link" href="">Contact Us</a>
                            <a class="btn btn-link" href="">Our Services</a>
                            <a class="btn btn-link" href="">Terms & Condition</a>
                            <a class="btn btn-link" href="">Support</a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <h5 class="text-light mb-4">Newsletter</h5>
                            <p>The pain should be just as important as the clita itself.</p>
                            <div class="position-relative mx-auto" style="max-width: 400px;">
                                <input class="form-control border-0 w-100 py-3 ps-4 pe-5" type="text" placeholder="Your email">
                                <button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">SignUp</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

