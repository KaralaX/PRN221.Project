@page
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using PRN221.Project.Domain.Constant
@using PRN221.Project.Domain.Enums
@using PRN221.Project.Infrastructure.Identity
@inject UserManager<ApplicationUser> UserManager;
@model PRN221.WebUi.Areas.Appointments.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var user = await UserManager.GetUserAsync(User);

    var isPatient = await UserManager.IsInRoleAsync(user, Roles.Patient);
}
@if (isPatient)
{
    <h1>Appointments</h1>
}
else
{
    <h1>Manage Appointments</h1>
    <p>
        <a asp-page="Create">Create New</a>
    </p>
}

<table class="table table-striped table-borderless">
    <thead>
    <tr>
        <th>
            Scheduled Date
        </th>
        <th>
            Scheduled Time
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appointment[0].Doctor)
        </th>
        @if (!isPatient)
        {
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Patient)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.Appointment[0].Service)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appointment[0].Status)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Appointment)
    {
        <tr>

            <td>
                @item.Date.ToString("MM-dd-yyyy")
            </td>
            <td>
                @item.Time.ToString(@"hh\:mm")
            </td>
            <td>
                @item.Doctor.FirstName @item.Doctor.LastName
            </td>
            @if (!isPatient)
            {
                <td>
                    @item.Patient.FirstName @item.Patient.LastName
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Service.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <div class="input-group">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Actions</button>
                    <ul class="dropdown-menu">
                        @if (item.Status == AppointmentStatus.Booked.ToString())
                        {
                            <li>
                                <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                            </li>
                        }
                        <li>
                            <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                        </li>
                        @if (item.Status == AppointmentStatus.Booked.ToString())
                        {
                            <li>
                                <a class="dropdown-item" asp-page="./Delete" asp-route-id="@item.Id">Cancel</a>
                            </li>
                        }
                    </ul>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>