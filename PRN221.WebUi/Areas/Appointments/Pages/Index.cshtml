@page
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using PRN221.Project.Domain.Constant
@using PRN221.Project.Domain.Enums
@using PRN221.Project.Infrastructure.Identity
@inject UserManager<ApplicationUser> UserManager;
@model PRN221.WebUi.Areas.Appointments.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var user = await UserManager.GetUserAsync(User);

    var isPatient = await UserManager.IsInRoleAsync(user, Roles.Patient);
}
<style>
    .content {
        flex: 1 0 auto;
    }

    .footer {
        flex-shrink: 0;
    }
</style>

<div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
    <p class="d-inline-block border rounded-pill py-1 px-4">Appointments</p>
    <h1>My Appointments</h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Scheduled Date</th>
            <th>Scheduled Time</th>
            <th>@Html.DisplayNameFor(model => model.Appointment[0].Doctor)</th>
            @if (!isPatient)
            {
                <th>@Html.DisplayNameFor(model => model.Appointment[0].Patient)</th>
            }
            <th>@Html.DisplayNameFor(model => model.Appointment[0].Service)</th>
            <th>@Html.DisplayNameFor(model => model.Appointment[0].Status)</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Appointment)
        {
            <tr>
                <td>@item.Date.ToString("MM-dd-yyyy")</td>
                <td>@item.Time.ToString(@"hh\:mm")</td>
                <td>@item.Doctor.FirstName @item.Doctor.LastName</td>
                @if (!isPatient)
                {
                    <td>@item.Patient.FirstName @item.Patient.LastName</td>
                }
                <td>@Html.DisplayFor(modelItem => item.Service.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Actions
                        </button>
                        <ul class="dropdown-menu">
                            @if (item.Status == AppointmentStatus.Booked.ToString())
                            {
                                <li>
                                    <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                </li>
                            }
                            <li>
                                <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                            </li>
                            @if (item.Status == AppointmentStatus.Booked.ToString())
                            {
                                <li>
                                    <a class="dropdown-item text-danger" asp-page="./Delete" asp-route-id="@item.Id">Cancel</a>
                                </li>
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="container-fluid bg-dark text-light footer mt-5 pt-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="container-fluid bg-dark text-light footer mt-5 pt-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="container py-5">
                    <div class="row g-5">
                        <div class="col-lg-3 col-md-6">
                            <h5 class="text-light mb-4">Address</h5>
                            <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>FPT University - Hoa Lac</p>
                            <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+09 444 44446</p>
                            <p class="mb-2"><i class="fa fa-envelope me-3"></i>clinik@gmail.com</p>
                            <div class="d-flex pt-2">
                                <a class="btn btn-outline-light btn-social rounded-circle" href="">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a class="btn btn-outline-light btn-social rounded-circle" href="">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a class="btn btn-outline-light btn-social rounded-circle" href="">
                                    <i class="fab fa-youtube"></i>
                                </a>
                                <a class="btn btn-outline-light btn-social rounded-circle" href="">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <h5 class="text-light mb-4">Services</h5>
                            <a class="btn btn-link" href="">Cardiology</a>
                            <a class="btn btn-link" href="">Pulmonary</a>
                            <a class="btn btn-link" href="">Neurology</a>
                            <a class="btn btn-link" href="">Orthopedics</a>
                            <a class="btn btn-link" href="">Laboratory</a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <h5 class="text-light mb-4">Quick Links</h5>
                            <a class="btn btn-link" href="">About Us</a>
                            <a class="btn btn-link" href="">Contact Us</a>
                            <a class="btn btn-link" href="">Our Services</a>
                            <a class="btn btn-link" href="">Terms & Condition</a>
                            <a class="btn btn-link" href="">Support</a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <h5 class="text-light mb-4">Newsletter</h5>
                            <p>The pain should be just as important as the clita itself.</p>
                            <div class="position-relative mx-auto" style="max-width: 400px;">
                                <input class="form-control border-0 w-100 py-3 ps-4 pe-5" type="text" placeholder="Your email">
                                <button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">SignUp</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

