@page
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using PRN221.Project.Domain.Constant
@using PRN221.Project.Domain.Enums
@using PRN221.Project.Infrastructure.Identity
@inject UserManager<ApplicationUser> UserManager;
@model PRN221.WebUi.Areas.Appointments.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var user = await UserManager.GetUserAsync(User);

    var isPatient = await UserManager.IsInRoleAsync(user, Roles.Patient);
}
<h1>My Appointments</h1>

<table class="table table-striped table-borderless">
    <thead>
    <tr>
        <th>
            Scheduled Date
        </th>
        <th>
            Scheduled Time
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appointment[0].Doctor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appointment[0].Service)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appointment[0].Status)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Appointment)
    {
        <tr class="align-content-center">
            <td>
                @item.Date.ToString("MM-dd-yyyy")
            </td>
            <td>
                @item.Time.ToString(@"hh\:mm")
            </td>
            <td>
                @item.Doctor.FirstName @item.Doctor.LastName
            </td>
            @if (!isPatient)
            {
                <td>
                    @item.Patient.FirstName @item.Patient.LastName
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Service.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @if (item.Status == AppointmentStatus.Booked.ToString() && DateTime.Now.Date.AddDays(1) <= item.Date)
                {
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                }
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                @if (item.Status == AppointmentStatus.Booked.ToString() && DateTime.Now.Date.AddDays(1) <= item.Date)
                {
                    <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@item.Id">Cancel</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>